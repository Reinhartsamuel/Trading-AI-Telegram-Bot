{
  "name": "telegram-trading-engine",
  "version": "1.0.0",
  "description": "Production-ready crypto trading signal engine API",
  "type": "module",
  "bin": {
    "trading-engine": "./dist/server.js",
    "trading-worker": "./dist/modules/jobs/worker.js"
  },
  "scripts": {
    "dev": "bun src/server.ts",
    "dev:worker": "bun src/modules/jobs/worker.ts",
    "dev:telegram": "bun src/telegram-bot.ts",
    "build": "bunx tsc",
    "start": "bun dist/server.js",
    "start:worker": "bun dist/modules/jobs/worker.js",
    "start:telegram": "bun dist/telegram-bot.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "bunx eslint src --ext .ts",
    "format": "bunx prettier --write src"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "zod": "^3.22.0",
    "postgres": "^3.4.0",
    "drizzle-orm": "^0.29.0",
    "ioredis": "^5.3.0",
    "openai": "^4.26.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "grammy": "^1.19.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.20.0",
    "bun-types": "latest"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
